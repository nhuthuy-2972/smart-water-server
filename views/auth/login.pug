extends ../../layout/common

block content
	if errors
		each error in errors
			.alert.alert-danger #{error}
	h1 Login
	form(action='/auth/login', method='post' class="w-25")
		.form-group
			label(for="username") User_name
			input#username.form-control(type='text', name='username' ,value=username? username : "" )
		.form-group
			label(for="password") Password
			input#password.form-control(type='password', name='password')
		button(type='submit' class="btn btn-primary mt-3") Submit